<?xml version="1.0" encoding="utf-8"?>
<z.zer.tor.media.android.gui.views.CheckableLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_background_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/view_selectable_list_item_checkbox"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:background="@null"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/view_selectable_list_item_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal"/>
    </LinearLayout>

    <View
        style="@style/divider_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</z.zer.tor.media.android.gui.views.CheckableLinearLayout>
